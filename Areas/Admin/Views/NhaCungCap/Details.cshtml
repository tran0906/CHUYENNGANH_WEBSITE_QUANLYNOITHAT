@model NhaCungCap
@{ ViewData["Title"] = "Chi tiết nhà cung cấp"; }

<h2>Chi tiết nhà cung cấp</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã NCC</dt>
            <dd class="col-sm-9">@Model.Mancc</dd>
            <dt class="col-sm-3">Tên NCC</dt>
            <dd class="col-sm-9">@Model.Tenncc</dd>
            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Model.Diachincc</dd>
            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.Sdtncc</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Emailncc</dd>
            <dt class="col-sm-3">Sản phẩm</dt>
            <dd class="col-sm-9">@Model.Sanpham</dd>
            <dt class="col-sm-3">Giá nhập</dt>
            <dd class="col-sm-9">@Model.Gianhap?.ToString("N0") đ</dd>
            <dt class="col-sm-3">Ngày cập nhật</dt>
            <dd class="col-sm-9">@Model.Ngaycapnhatsp?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Mancc" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>