@model DonHang
@{ ViewData["Title"] = "Xóa đơn hàng"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa đơn hàng này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Khách hàng</dt>
            <dd class="col-sm-9">@Model.MakhNavigation?.Hotenkh</dd>
            <dt class="col-sm-3">Ngày đặt</dt>
            <dd class="col-sm-9">@Model.Ngaydat.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@Model.Trangthai</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Madonhang" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>