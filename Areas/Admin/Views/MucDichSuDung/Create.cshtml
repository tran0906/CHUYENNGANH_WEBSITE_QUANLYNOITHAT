@model MucDichSuDung
@{
    ViewData["Title"] = "Thêm mục đích sử dụng";
}

<h2 class="mb-4">Thêm mục đích sử dụng</h2>

<div class="card">
    <div class="card-header">
        <strong><i class="bi bi-plus-lg"></i> Thêm mới</strong>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Mamdsd" class="form-label">Mã mục đích sử dụng <span class="text-danger">*</span></label>
                    <input asp-for="Mamdsd" class="form-control" placeholder="VD: MDSD01" required />
                    <span asp-validation-for="Mamdsd" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Tenmdsd" class="form-label">Tên mục đích sử dụng <span class="text-danger">*</span></label>
                    <input asp-for="Tenmdsd" class="form-control" placeholder="VD: Phòng khách" required />
                    <span asp-validation-for="Tenmdsd" class="text-danger"></span>
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="Motamdsd" class="form-label">Mô tả</label>
                    <textarea asp-for="Motamdsd" class="form-control" rows="3" placeholder="Mô tả chi tiết..."></textarea>
                    <span asp-validation-for="Motamdsd" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
