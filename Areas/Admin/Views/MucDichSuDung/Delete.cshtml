@model MucDichSuDung
@{ ViewData["Title"] = "Xóa mục đích sử dụng"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa mục đích sử dụng này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã mục đích</dt>
            <dd class="col-sm-9">@Model.Mamdsd</dd>
            <dt class="col-sm-3">Tên mục đích</dt>
            <dd class="col-sm-9">@Model.Tenmdsd</dd>
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Motamdsd</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Mamdsd" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>