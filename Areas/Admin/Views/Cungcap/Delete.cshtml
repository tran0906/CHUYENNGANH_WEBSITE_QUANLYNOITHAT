@model Cungcap
@{ ViewData["Title"] = "Xóa cung cấp"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa cung cấp này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nhà cung cấp</dt>
            <dd class="col-sm-9">@Model.ManccNavigation?.Tenncc</dd>
            <dt class="col-sm-3">Sản phẩm</dt>
            <dd class="col-sm-9">@Model.MaspNavigation?.Tensp</dd>
            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Soluongsp</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Mancc" />
    <input type="hidden" asp-for="Masp" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>