@model IEnumerable<Cungcap>
@{ ViewData["Title"] = "Quản lý cung cấp"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý cung cấp</h2>
    <span class="text-muted small"><i class="bi bi-info-circle"></i> Dữ liệu được tạo tự động khi thêm sản phẩm</span>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Lọc theo nhà cung cấp</label>
                <select name="mancc" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Tất cả --</option>
                    @foreach (SelectListItem item in (SelectList)ViewData["NhaCungCaps"])
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Nhà cung cấp</th>
                    <th>Sản phẩm</th>
                    <th>Số lượng SP</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ManccNavigation?.Tenncc</td>
                        <td>@item.MaspNavigation?.Tensp</td>
                        <td>@item.Soluongsp</td>
                        <td>
                            <a asp-action="Edit" asp-route-mancc="@item.Mancc" asp-route-masp="@item.Masp" class="btn btn-sm btn-warning" title="Sửa số lượng"><i class="bi bi-pencil"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>