@model Cungcap
@{ ViewData["Title"] = "Chi tiết cung cấp"; }

<h2>Chi tiết cung cấp</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nhà cung cấp</dt>
            <dd class="col-sm-9">@Model.ManccNavigation?.Tenncc (@Model.Mancc)</dd>
            <dt class="col-sm-3">Sản phẩm</dt>
            <dd class="col-sm-9">@Model.MaspNavigation?.Tensp (@Model.Masp)</dd>
            <dt class="col-sm-3">Số lượng SP</dt>
            <dd class="col-sm-9">@Model.Soluongsp</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-mancc="@Model.Mancc" asp-route-masp="@Model.Masp" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>