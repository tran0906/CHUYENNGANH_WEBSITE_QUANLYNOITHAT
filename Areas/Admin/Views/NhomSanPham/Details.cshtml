@model NhomSanPham
@{ ViewData["Title"] = "Chi tiết nhóm sản phẩm"; }

<h2>Chi tiết nhóm sản phẩm</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã nhóm</dt>
            <dd class="col-sm-9">@Model.Manhomsp</dd>
            <dt class="col-sm-3">Tên nhóm</dt>
            <dd class="col-sm-9">@Model.Tennhomsp</dd>
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Mota</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Manhomsp" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>