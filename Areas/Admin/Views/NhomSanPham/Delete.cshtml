@model NhomSanPham
@{ ViewData["Title"] = "Xóa nhóm sản phẩm"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa nhóm sản phẩm này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã nhóm</dt>
            <dd class="col-sm-9">@Model.Manhomsp</dd>
            <dt class="col-sm-3">Tên nhóm</dt>
            <dd class="col-sm-9">@Model.Tennhomsp</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Manhomsp" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>