@model IEnumerable<NhomSanPham>
@{ ViewData["Title"] = "Quản lý nhóm sản phẩm"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý nhóm sản phẩm</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm mới</a>
</div>

<!-- Form tìm kiếm -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Tìm theo tên nhóm</label>
                <input type="text" name="search" class="form-control" placeholder="Nhập tên nhóm sản phẩm..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-6 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã nhóm</th>
                    <th>Tên nhóm</th>
                    <th>Mô tả</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Manhomsp</td>
                        <td>@item.Tennhomsp</td>
                        <td>@item.Mota</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Manhomsp" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Manhomsp" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Manhomsp" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>