@model PhieuXuatKho
@{ ViewData["Title"] = "Xóa phiếu xuất kho"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa phiếu xuất kho này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã phiếu xuất</dt>
            <dd class="col-sm-9">@Model.Maphieuxuat</dd>
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Ngày xuất</dt>
            <dd class="col-sm-9">@Model.Ngayxuat?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Maphieuxuat" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>