@model PhieuXuatKho
@{ ViewData["Title"] = "Sửa phiếu xuất kho"; }

<h2>Sửa phiếu xuất kho</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Maphieuxuat" />
            <div class="mb-3">
                <label asp-for="Maphieuxuat" class="form-label">Mã phiếu xuất</label>
                <input asp-for="Maphieuxuat" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Madonhang" class="form-label">Đơn hàng</label>
                <select asp-for="Madonhang" class="form-select" asp-items="ViewBag.Madonhang">
                    <option value="">-- Chọn đơn hàng --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Userid" class="form-label">Nhân viên</label>
                <select asp-for="Userid" class="form-select" asp-items="ViewBag.Userid">
                    <option value="">-- Chọn nhân viên --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Ngayxuat" class="form-label">Ngày xuất</label>
                <input asp-for="Ngayxuat" class="form-control" type="date" />
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }