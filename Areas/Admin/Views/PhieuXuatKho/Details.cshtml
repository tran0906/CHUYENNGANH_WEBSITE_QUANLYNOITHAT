@model PhieuXuatKho
@{ ViewData["Title"] = "Chi tiết phiếu xuất kho"; }

<h2>Chi tiết phiếu xuất kho</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã phiếu xuất</dt>
            <dd class="col-sm-9">@Model.Maphieuxuat</dd>
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Nhân viên</dt>
            <dd class="col-sm-9">@Model.User?.HoTen</dd>
            <dt class="col-sm-3">Ngày xuất</dt>
            <dd class="col-sm-9">@Model.Ngayxuat?.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-3">NV duyệt</dt>
            <dd class="col-sm-9">@Model.Manvduyet</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Maphieuxuat" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>