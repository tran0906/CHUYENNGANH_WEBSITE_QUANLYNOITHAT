@{
    ViewData["Title"] = "Thống kê";
}

<h2 class="mb-4">Thống kê & Báo cáo</h2>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-graph-up text-primary" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Thống kê Doanh thu</h4>
                <p class="text-muted">Xem doanh thu theo ngày, tháng, năm</p>
                <a asp-action="DoanhThu" class="btn btn-primary">
                    <i class="bi bi-arrow-right"></i> Xem thống kê
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-trophy text-success" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Sản phẩm bán chạy</h4>
                <p class="text-muted">Top sản phẩm được mua nhiều nhất</p>
                <a asp-action="SanPhamBanChay" class="btn btn-success">
                    <i class="bi bi-arrow-right"></i> Xem thống kê
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-pie-chart text-warning" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Đơn hàng theo trạng thái</h4>
                <p class="text-muted">Phân tích đơn hàng theo trạng thái</p>
                <a asp-action="DonHangTheoTrangThai" class="btn btn-warning">
                    <i class="bi bi-arrow-right"></i> Xem thống kê
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-star text-danger" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Khách hàng VIP</h4>
                <p class="text-muted">Top khách hàng chi tiêu nhiều nhất</p>
                <a asp-action="KhachHangVIP" class="btn btn-danger">
                    <i class="bi bi-arrow-right"></i> Xem thống kê
                </a>
            </div>
        </div>
    </div>
</div>
