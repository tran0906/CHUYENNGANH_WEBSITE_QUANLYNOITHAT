@model User
@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<h2><i class="bi bi-person-badge me-2"></i>Chi tiết nhân viên</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-person-circle display-1 text-primary"></i>
                </div>
                <h4>@Model.HoTen</h4>
                <p class="text-muted">@Model.TenUser</p>
                @{
                    var badgeClass = Model.VaiTro switch
                    {
                        "Quản trị hệ thống" => "bg-danger",
                        "Nhân viên" => "bg-primary",
                        "Kế toán" => "bg-success",
                        "Kho" => "bg-warning text-dark",
                        _ => "bg-secondary"
                    };
                }
                <span class="badge @badgeClass fs-6">@Model.VaiTro</span>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <span class="text-muted">Mã NV:</span>
                    <code>@Model.UserId</code>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span class="text-muted">Ngày tạo:</span>
                    <span>@Model.NgayTao?.ToString("dd/MM/yyyy")</span>
                </li>
            </ul>
            <div class="card-footer">
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning btn-sm flex-fill">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm flex-fill">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-bar-chart"></i> Thống kê hoạt động
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-cart3 display-6 text-primary"></i>
                            <h3 class="mt-2 mb-0">@ViewBag.SoDonHang</h3>
                            <small class="text-muted">Đơn hàng xử lý</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-credit-card display-6 text-success"></i>
                            <h3 class="mt-2 mb-0">@ViewBag.SoThanhToan</h3>
                            <small class="text-muted">Thanh toán</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-truck display-6 text-info"></i>
                            <h3 class="mt-2 mb-0">@ViewBag.SoVanChuyen</h3>
                            <small class="text-muted">Vận chuyển</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-clipboard-check display-6 text-warning"></i>
                            <h3 class="mt-2 mb-0">@ViewBag.SoPhieuXuat</h3>
                            <small class="text-muted">Phiếu xuất kho</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-shield-check"></i> Quyền hạn
            </div>
            <div class="card-body">
                @switch (Model.VaiTro)
                {
                    case "Quản trị hệ thống":
                        <ul class="mb-0">
                            <li>Toàn quyền quản lý hệ thống</li>
                            <li>Quản lý người dùng và phân quyền</li>
                            <li>Xem báo cáo và thống kê</li>
                            <li>Cấu hình hệ thống</li>
                        </ul>
                        break;
                    case "Nhân viên":
                        <ul class="mb-0">
                            <li>Quản lý sản phẩm</li>
                            <li>Xử lý đơn hàng</li>
                            <li>Quản lý khách hàng</li>
                        </ul>
                        break;
                    case "Kế toán":
                        <ul class="mb-0">
                            <li>Quản lý thanh toán</li>
                            <li>Xem báo cáo doanh thu</li>
                            <li>Quản lý công nợ</li>
                        </ul>
                        break;
                    default:
                        <p class="text-muted mb-0">Quyền hạn cơ bản</p>
                        break;
                }
            </div>
        </div>
    </div>
</div>
