@model User
@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}

<h2><i class="bi bi-pencil-square me-2"></i>Sửa thông tin nhân viên</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="NgayTao" />
                    <input type="hidden" asp-for="MatKhau" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mã nhân viên</label>
                            <input type="text" class="form-control" value="@Model.UserId" readonly disabled />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenUser" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="TenUser" class="form-control" required />
                            <span asp-validation-for="TenUser" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                        <input asp-for="HoTen" class="form-control" required />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mật khẩu mới</label>
                            <input type="password" name="newPassword" class="form-control" placeholder="Để trống nếu không đổi" />
                            <small class="text-muted">Chỉ nhập nếu muốn đổi mật khẩu</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="VaiTro" class="form-label">Vai trò <span class="text-danger">*</span></label>
                            <select asp-for="VaiTro" class="form-select" asp-items="@((List<SelectListItem>)ViewBag.VaiTroOptions)" required>
                                <option value="">-- Chọn vai trò --</option>
                            </select>
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ngày tạo</label>
                        <input type="text" class="form-control" value="@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")" readonly disabled />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Cập nhật
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6><i class="bi bi-info-circle"></i> Lưu ý</h6>
                <ul class="small mb-0">
                    <li>Mã nhân viên không thể thay đổi</li>
                    <li>Để trống mật khẩu nếu không muốn đổi</li>
                    <li>Thay đổi vai trò sẽ ảnh hưởng quyền truy cập</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
