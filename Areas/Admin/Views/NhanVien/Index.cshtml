@model IEnumerable<User>
@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-people-fill me-2"></i>Quản lý nhân viên</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm nhân viên</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Form tìm kiếm -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Họ tên</label>
                <input type="text" name="searchName" class="form-control" placeholder="Tìm theo họ tên..." value="@ViewBag.SearchName" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Tên đăng nhập</label>
                <input type="text" name="searchUser" class="form-control" placeholder="Tìm theo username..." value="@ViewBag.SearchUser" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Vai trò</label>
                <select name="vaiTro" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @if (ViewBag.VaiTroList != null)
                    {
                        foreach (var vt in ViewBag.VaiTroList)
                        {
                            <option value="@vt" selected="@(ViewBag.VaiTro == vt)">@vt</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list"></i> Danh sách nhân viên</span>
        <span class="badge bg-info">@Model.Count() nhân viên</span>
    </div>
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã NV</th>
                    <th>Họ tên</th>
                    <th>Tên đăng nhập</th>
                    <th>Vai trò</th>
                    <th>Ngày tạo</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><code>@item.UserId</code></td>
                        <td><strong>@item.HoTen</strong></td>
                        <td>@item.TenUser</td>
                        <td>
                            @{
                                var badgeClass = item.VaiTro switch
                                {
                                    "Quản trị hệ thống" => "bg-danger",
                                    "Nhân viên" => "bg-primary",
                                    "Kế toán" => "bg-success",
                                    "Kho" => "bg-warning text-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@item.VaiTro</span>
                        </td>
                        <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="ResetPassword" asp-route-id="@item.UserId" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Reset mật khẩu về 123456?');">
                                    <button type="submit" class="btn btn-secondary btn-sm" title="Reset mật khẩu">
                                        <i class="bi bi-key"></i>
                                    </button>
                                </form>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-4">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-2">Không có nhân viên nào</p>
            </div>
        }
    </div>
</div>
