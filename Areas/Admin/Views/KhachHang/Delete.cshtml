@model KhachHang
@{ ViewData["Title"] = "Xóa khách hàng"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa khách hàng này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã khách hàng</dt>
            <dd class="col-sm-9">@Model.Makh</dd>
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.Hotenkh</dd>
            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.Sdtkh</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Makh" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>