@model KhachHang
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    var donHangs = ViewBag.DonHangs as List<DonHang> ?? new List<DonHang>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-person-circle"></i> Chi tiết khách hàng</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="row">
    <!-- Thông tin khách hàng -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header" style="background:#8B4513;color:white;">
                <i class="bi bi-person-badge"></i> Thông tin khách hàng
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-person-fill fs-1" style="color:#8B4513;"></i>
                    </div>
                    <h5 class="mt-2 mb-0">@Model.Hotenkh</h5>
                    <small class="text-muted">@Model.Makh</small>
                </div>
                <hr />
                <div class="mb-2">
                    <small class="text-muted">Số điện thoại</small>
                    <p class="mb-0"><i class="bi bi-telephone"></i> @Model.Sdtkh</p>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Địa chỉ</small>
                    <p class="mb-0"><i class="bi bi-geo-alt"></i> @(Model.Diachikh ?? "Chưa cập nhật")</p>
                </div>
                @if (!string.IsNullOrEmpty(Model.Matkhau))
                {
                    <div class="mb-0">
                        <small class="text-muted">Tài khoản</small>
                        <p class="mb-0"><span class="badge bg-success"><i class="bi bi-check-circle"></i> Đã đăng ký</span></p>
                    </div>
                }
            </div>
        </div>

        <!-- Thống kê -->
        <div class="card">
            <div class="card-header" style="background:#8B4513;color:white;">
                <i class="bi bi-bar-chart"></i> Thống kê mua hàng
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Tổng đơn hàng</span>
                        <strong>@ViewBag.TongDonHang</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Đơn hoàn thành</span>
                        <strong>@ViewBag.DonHoanThanh</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Đơn đang xử lý</span>
                        <strong>@ViewBag.DonDangXuLy</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Đơn đã hủy</span>
                        <strong>@ViewBag.DonDaHuy</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <span><strong>Tổng chi tiêu</strong></span>
                        <strong class="text-danger">@(((decimal)ViewBag.TongChiTieu).ToString("N0")) đ</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Lịch sử đơn hàng -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header" style="background:#8B4513;color:white;">
                <i class="bi bi-receipt"></i> Lịch sử đơn hàng (@donHangs.Count)
            </div>
            <div class="card-body p-0">
                @if (donHangs.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã ĐH</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dh in donHangs)
                                {
                                    var tongTien = dh.CtDonhangs?.Sum(ct => ct.Thanhtien ?? 0) ?? 0;
                                    var badgeClass = (dh.Trangthai == "Hoàn thành" || dh.Trangthai == "Đã giao") ? "bg-success" 
                                                   : dh.Trangthai == "Đã hủy" ? "bg-danger" : "bg-secondary";
                                    <tr>
                                        <td><strong>@dh.Madonhang</strong></td>
                                        <td>@dh.Ngaydat.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-end">@tongTien.ToString("N0") đ</td>
                                        <td><span class="badge @badgeClass">@dh.Trangthai</span></td>
                                        <td>
                                            <a asp-controller="DonHang" asp-action="Details" asp-route-id="@dh.Madonhang" 
                                               class="btn btn-sm btn-outline-secondary" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        <p class="mb-0">Khách hàng chưa có đơn hàng nào</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
