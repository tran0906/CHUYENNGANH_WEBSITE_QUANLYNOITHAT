@model KhachHang
@{ ViewData["Title"] = "Sửa khách hàng"; }

<h2>Sửa thông tin khách hàng</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Makh" />
            <div class="mb-3">
                <label asp-for="Makh" class="form-label">Mã khách hàng</label>
                <input asp-for="Makh" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Hotenkh" class="form-label">Họ tên</label>
                <input asp-for="Hotenkh" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Diachikh" class="form-label">Địa chỉ</label>
                <input asp-for="Diachikh" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Sdtkh" class="form-label">Số điện thoại</label>
                <input asp-for="Sdtkh" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Matkhau" class="form-label">Mật khẩu</label>
                <input asp-for="Matkhau" class="form-control" type="password" />
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }