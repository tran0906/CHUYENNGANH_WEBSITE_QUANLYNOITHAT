@model IEnumerable<KhachHang>
@{ ViewData["Title"] = "Quản lý khách hàng"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-people"></i> Quản lý khách hàng</h2>
    <span class="text-muted small"><i class="bi bi-info-circle"></i> Khách hàng được tạo tự động khi đăng ký hoặc đặt hàng</span>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Form tìm kiếm -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Tìm kiếm khách hàng</label>
                <input type="text" name="search" class="form-control" placeholder="Nhập tên hoặc số điện thoại..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-6 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="bi bi-list-ul"></i> Danh sách khách hàng (@Model.Count())
    </div>
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã KH</th>
                    <th>Họ tên</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Không có khách hàng nào
                        </td>
                    </tr>
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Makh</strong></td>
                        <td>@item.Hotenkh</td>
                        <td>@item.Sdtkh</td>
                        <td>@item.Diachikh</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Makh" class="btn btn-sm btn-info" title="Xem chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Makh" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>