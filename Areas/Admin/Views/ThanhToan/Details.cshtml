@model ThanhToan
@{ ViewData["Title"] = "Chi tiết thanh toán"; }

<h2>Chi tiết thanh toán</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã thanh toán</dt>
            <dd class="col-sm-9">@Model.Mathanhtoan</dd>
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Nhân viên</dt>
            <dd class="col-sm-9">@Model.User?.HoTen</dd>
            <dt class="col-sm-3">Số tiền</dt>
            <dd class="col-sm-9">@Model.Sotien?.ToString("N0") đ</dd>
            <dt class="col-sm-3">Phương thức</dt>
            <dd class="col-sm-9">@Model.Phuongthuc</dd>
            <dt class="col-sm-3">Ngày thanh toán</dt>
            <dd class="col-sm-9">@Model.Ngaythanhtoan?.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt class="col-sm-3">NV duyệt</dt>
            <dd class="col-sm-9">@Model.Manvduyet</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Mathanhtoan" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>