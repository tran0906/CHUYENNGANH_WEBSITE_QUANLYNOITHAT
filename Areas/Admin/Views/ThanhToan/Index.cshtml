@model IEnumerable<ThanhToan>
@{ ViewData["Title"] = "Quản lý thanh toán"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý thanh toán</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm mới</a>
</div>

<!-- Form lọc -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Lọc theo phương thức thanh toán</label>
                <select name="phuongThuc" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @if (ViewBag.PhuongThucList != null)
                    {
                        foreach (var pt in ViewBag.PhuongThucList)
                        {
                            <option value="@pt" selected="@(ViewBag.CurrentPhuongThuc == pt)">@pt</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary"><i class="bi bi-funnel"></i> Lọc</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Đặt lại</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã TT</th>
                    <th>Mã đơn hàng</th>
                    <th>Nhân viên</th>
                    <th>Số tiền</th>
                    <th>Phương thức</th>
                    <th>Ngày TT</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Mathanhtoan</td>
                        <td>@item.Madonhang</td>
                        <td>@item.User?.HoTen</td>
                        <td>@item.Sotien?.ToString("N0") đ</td>
                        <td>@item.Phuongthuc</td>
                        <td>@item.Ngaythanhtoan?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Mathanhtoan" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Mathanhtoan" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Mathanhtoan" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-3">Không có dữ liệu</div>
        }
    </div>
</div>
