@model IEnumerable<ThanhToan>
@{ ViewData["Title"] = "Quản lý thanh toán"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-credit-card"></i> Quản lý thanh toán</h2>
    <span class="text-muted small"><i class="bi bi-info-circle"></i> Dữ liệu được tạo tự động khi khách thanh toán</span>
</div>

<!-- Form lọc -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Lọc theo phương thức thanh toán</label>
                @{
                    var currentPT = ViewBag.CurrentPhuongThuc as string;
                }
                <select name="phuongThuc" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @if (currentPT == "MoMo")
                    {
                        <option value="MoMo" selected>MoMo - Ví điện tử</option>
                    }
                    else
                    {
                        <option value="MoMo">MoMo - Ví điện tử</option>
                    }
                    @if (currentPT == "COD")
                    {
                        <option value="COD" selected>COD - Thanh toán khi nhận hàng</option>
                    }
                    else
                    {
                        <option value="COD">COD - Thanh toán khi nhận hàng</option>
                    }
                    @if (currentPT == "Tiền mặt")
                    {
                        <option value="Tiền mặt" selected>Tiền mặt - Thanh toán trực tiếp</option>
                    }
                    else
                    {
                        <option value="Tiền mặt">Tiền mặt - Thanh toán trực tiếp</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary"><i class="bi bi-funnel"></i> Lọc</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Đặt lại</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="bi bi-list-ul"></i> Danh sách thanh toán (@Model.Count())
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã TT</th>
                    <th>Mã đơn hàng</th>
                    <th>Số tiền</th>
                    <th>Phương thức</th>
                    <th>Ngày thanh toán</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Không có dữ liệu thanh toán
                        </td>
                    </tr>
                }
                @foreach (var item in Model)
                {
                    var badgeClass = item.Phuongthuc switch
                    {
                        "MoMo" => "bg-danger",
                        "COD" => "bg-success",
                        "Tiền mặt" => "bg-secondary",
                        _ => "bg-secondary"
                    };
                    <tr>
                        <td><strong>@item.Mathanhtoan</strong></td>
                        <td>
                            <a asp-controller="DonHang" asp-action="Details" asp-route-id="@item.Madonhang" class="text-decoration-none">
                                @item.Madonhang
                            </a>
                        </td>
                        <td class="fw-bold text-success">@item.Sotien?.ToString("N0") đ</td>
                        <td><span class="badge @badgeClass">@item.Phuongthuc</span></td>
                        <td>@item.Ngaythanhtoan?.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
