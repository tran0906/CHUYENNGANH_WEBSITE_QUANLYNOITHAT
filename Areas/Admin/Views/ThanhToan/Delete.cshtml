@model ThanhToan
@{ ViewData["Title"] = "Xóa thanh toán"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa thanh toán này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã thanh toán</dt>
            <dd class="col-sm-9">@Model.Mathanhtoan</dd>
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Số tiền</dt>
            <dd class="col-sm-9">@Model.Sotien?.ToString("N0") đ</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Mathanhtoan" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>