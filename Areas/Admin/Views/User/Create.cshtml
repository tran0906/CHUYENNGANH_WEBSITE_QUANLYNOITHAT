@model User
@{
    ViewData["Title"] = "Thêm người dùng";
}

<h2><i class="bi bi-person-plus me-2"></i>Thêm người dùng mới</h2>
<hr />
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UserId" class="form-label">Mã người dùng <span class="text-danger">*</span></label>
                            <input asp-for="UserId" class="form-control" placeholder="VD: NV01, AD01..." required />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenUser" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="TenUser" class="form-control" placeholder="Tên dùng để đăng nhập" required />
                            <span asp-validation-for="TenUser" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                        <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên đầy đủ" required />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MatKhau" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="MatKhau" type="password" class="form-control" value="123456" required />
                            <small class="text-muted">Mật khẩu mặc định: 123456</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="VaiTro" class="form-label">Vai trò <span class="text-danger">*</span></label>
                            <select asp-for="VaiTro" class="form-select" asp-items="@((List<SelectListItem>)ViewBag.VaiTroOptions)" required>
                                <option value="">-- Chọn vai trò --</option>
                            </select>
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Lưu
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6><i class="bi bi-info-circle"></i> Hướng dẫn</h6>
                <ul class="small mb-0">
                    <li>Mã người dùng phải là duy nhất</li>
                    <li>Tên đăng nhập dùng để đăng nhập hệ thống</li>
                    <li>Vai trò quyết định quyền truy cập</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="/js/validation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            
            // Validate Mã người dùng
            const userId = document.querySelector('[name="UserId"]');
            userId.addEventListener('blur', function() {
                const result = Validator.isValidCode(this.value, 'Mã người dùng');
                if (!result.valid) Validator.showError(this, result.message);
                else Validator.showSuccess(this);
            });
            userId.addEventListener('input', function() {
                this.value = this.value.replace(/[^a-zA-Z0-9_-]/g, '').toUpperCase();
            });
            
            // Validate Tên đăng nhập
            const tenUser = document.querySelector('[name="TenUser"]');
            tenUser.addEventListener('blur', function() {
                if (Validator.isEmpty(this.value)) {
                    Validator.showError(this, 'Tên đăng nhập không được để trống');
                } else if (this.value.length < 3 || this.value.length > 50) {
                    Validator.showError(this, 'Tên đăng nhập từ 3-50 ký tự');
                } else if (!/^[a-zA-Z0-9_]+$/.test(this.value)) {
                    Validator.showError(this, 'Chỉ chứa chữ, số và dấu gạch dưới');
                } else {
                    Validator.showSuccess(this);
                }
            });
            tenUser.addEventListener('input', function() {
                this.value = this.value.replace(/[^a-zA-Z0-9_]/g, '');
            });
            
            // Validate Họ tên
            const hoTen = document.querySelector('[name="HoTen"]');
            hoTen.addEventListener('blur', function() {
                const result = Validator.isValidName(this.value);
                if (!result.valid) Validator.showError(this, result.message);
                else Validator.showSuccess(this);
            });
            
            // Validate Mật khẩu
            const matKhau = document.querySelector('[name="MatKhau"]');
            matKhau.addEventListener('blur', function() {
                if (Validator.isEmpty(this.value)) {
                    Validator.showError(this, 'Mật khẩu không được để trống');
                } else if (this.value.length < 6) {
                    Validator.showError(this, 'Mật khẩu tối thiểu 6 ký tự');
                } else {
                    Validator.showSuccess(this);
                }
            });
            
            // Validate Vai trò
            const vaiTro = document.querySelector('[name="VaiTro"]');
            vaiTro.addEventListener('change', function() {
                if (!this.value) {
                    Validator.showError(this, 'Vui lòng chọn vai trò');
                } else {
                    Validator.showSuccess(this);
                }
            });
            
            // Submit validation
            form.addEventListener('submit', function(e) {
                let isValid = true;
                
                // Trigger blur events để validate
                [userId, tenUser, hoTen, matKhau].forEach(input => {
                    input.dispatchEvent(new Event('blur'));
                    if (input.classList.contains('is-invalid')) isValid = false;
                });
                
                if (!vaiTro.value) {
                    Validator.showError(vaiTro, 'Vui lòng chọn vai trò');
                    isValid = false;
                }
                
                if (!isValid) {
                    e.preventDefault();
                    const firstError = form.querySelector('.is-invalid');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstError.focus();
                    }
                }
            });
        });
    </script>
}
