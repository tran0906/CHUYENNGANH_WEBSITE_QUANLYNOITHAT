@model User
@{ ViewData["Title"] = "Xóa người dùng"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa người dùng này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
            <dt class="col-sm-3">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Model.TenUser</dd>
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>
            <dt class="col-sm-3">Vai trò</dt>
            <dd class="col-sm-9">@Model.VaiTro</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>