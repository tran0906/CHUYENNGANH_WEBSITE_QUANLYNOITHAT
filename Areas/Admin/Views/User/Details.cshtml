@model User
@{ ViewData["Title"] = "Chi tiết người dùng"; }

<h2>Chi tiết người dùng</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
            <dt class="col-sm-3">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Model.TenUser</dd>
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>
            <dt class="col-sm-3">Vai trò</dt>
            <dd class="col-sm-9"><span class="badge @(Model.VaiTro == "Admin" ? "bg-danger" : "bg-primary")">@Model.VaiTro</span></dd>
            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>