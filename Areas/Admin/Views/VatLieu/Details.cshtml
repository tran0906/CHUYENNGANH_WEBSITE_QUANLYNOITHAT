@model VatLieu
@{ ViewData["Title"] = "Chi tiết vật liệu"; }

<h2>Chi tiết vật liệu</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã vật liệu</dt>
            <dd class="col-sm-9">@Model.Mavl</dd>
            <dt class="col-sm-3">Tên vật liệu</dt>
            <dd class="col-sm-9">@Model.Tenvl</dd>
            <dt class="col-sm-3">Màu</dt>
            <dd class="col-sm-9">@Model.Mauvl</dd>
            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Soluong</dd>
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Motavl</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Mavl" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>