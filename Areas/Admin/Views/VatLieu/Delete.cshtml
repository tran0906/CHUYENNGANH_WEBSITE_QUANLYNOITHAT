@model VatLieu
@{ ViewData["Title"] = "Xóa vật liệu"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa vật liệu này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã vật liệu</dt>
            <dd class="col-sm-9">@Model.Mavl</dd>
            <dt class="col-sm-3">Tên vật liệu</dt>
            <dd class="col-sm-9">@Model.Tenvl</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Mavl" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>