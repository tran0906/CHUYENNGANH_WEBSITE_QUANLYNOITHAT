@model IEnumerable<VanChuyen>
@{ ViewData["Title"] = "Quản lý vận chuyển"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-truck"></i> Quản lý vận chuyển</h2>
    <span class="text-muted small"><i class="bi bi-info-circle"></i> Dữ liệu được tạo tự động khi xử lý đơn hàng</span>
</div>

<!-- Form lọc -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Lọc theo trạng thái giao hàng</label>
                @{
                    var currentTT = ViewBag.CurrentTrangThai as string;
                    var trangThaiList = new[] { "Chờ lấy hàng", "Đang giao", "Hoàn thành", "Đã hủy" };
                }
                <select name="trangThai" class="form-select">
                    <option value="">-- Tất cả trạng thái --</option>
                    @foreach (var tt in trangThaiList)
                    {
                        <option value="@tt" selected="@(currentTT == tt)">@tt</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary"><i class="bi bi-funnel"></i> Lọc</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Đặt lại</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="bi bi-list-ul"></i> Danh sách vận chuyển (@Model.Count())
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã vận đơn</th>
                    <th>Mã đơn hàng</th>
                    <th>Nhân viên giao</th>
                    <th>Đơn vị vận chuyển</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Không có dữ liệu vận chuyển
                        </td>
                    </tr>
                }
                @foreach (var item in Model)
                {
                    var badgeClass = item.Trangthaigiao switch
                    {
                        "Chờ lấy hàng" => "bg-info",
                        "Đang giao" => "bg-warning text-dark",
                        "Hoàn thành" => "bg-success",
                        "Đã hủy" => "bg-danger",
                        _ => "bg-secondary"
                    };
                    <tr>
                        <td><strong>@item.Mavandon</strong></td>
                        <td>
                            <a asp-controller="DonHang" asp-action="Details" asp-route-id="@item.Madonhang" class="text-decoration-none">
                                @item.Madonhang
                            </a>
                        </td>
                        <td>@(item.User?.HoTen ?? "-")</td>
                        <td>@item.Donvivanchuyen</td>
                        <td><span class="badge @badgeClass">@item.Trangthaigiao</span></td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
