@model IEnumerable<VanChuyen>
@{ ViewData["Title"] = "Quản lý vận chuyển"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý vận chuyển</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm mới</a>
</div>

<!-- Form lọc và tìm kiếm -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Lọc theo trạng thái</label>
                <select name="trangThai" class="form-select">
                    <option value="">-- Tất cả trạng thái --</option>
                    @if (ViewBag.TrangThaiList != null)
                    {
                        foreach (var tt in ViewBag.TrangThaiList)
                        {
                            <option value="@tt" selected="@(ViewBag.CurrentTrangThai == tt)">@tt</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="search" class="form-control" placeholder="Mã vận đơn, mã đơn hàng, đơn vị VC..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Đặt lại</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã vận đơn</th>
                    <th>Mã đơn hàng</th>
                    <th>Nhân viên</th>
                    <th>Đơn vị VC</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Mavandon</td>
                        <td>@item.Madonhang</td>
                        <td>@item.User?.HoTen</td>
                        <td>@item.Donvivanchuyen</td>
                        <td>
                            <span class="badge @(item.Trangthaigiao == "Đã giao" ? "bg-success" : item.Trangthaigiao == "Đang giao" ? "bg-warning" : "bg-secondary")">
                                @item.Trangthaigiao
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Mavandon" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Mavandon" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Mavandon" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-3">Không có dữ liệu</div>
        }
    </div>
</div>
