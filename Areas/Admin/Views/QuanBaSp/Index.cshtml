@model IEnumerable<QuanBaSp>
@{
    ViewData["Title"] = "Quản lý quảng bá sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý quảng bá sản phẩm</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm đợt quảng bá</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Form tìm kiếm -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm đợt giảm giá</label>
                <input type="text" name="search" class="form-control" placeholder="Nhập mã đợt giảm giá..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Trạng thái</label>
                <select name="trangthai" class="form-select">
                    <option value="">-- Tất cả --</option>
                    <option value="dangdiễnra" selected="@(ViewBag.TrangThai == "dangdiễnra")">Đang diễn ra</option>
                    <option value="sapdiễnra" selected="@(ViewBag.TrangThai == "sapdiễnra")">Sắp diễn ra</option>
                    <option value="daketthuc" selected="@(ViewBag.TrangThai == "daketthuc")">Đã kết thúc</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã đợt</th>
                    <th>Giảm giá</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Nhân viên</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var isActive = item.Ngaybatdau <= DateTime.Now && item.Ngayketthuc >= DateTime.Now;
                    <tr>
                        <td>@item.Madotgiamgia</td>
                        <td><span class="badge bg-danger">-@(item.Phantramgiam ?? 0)%</span></td>
                        <td>@item.Ngaybatdau?.ToString("dd/MM/yyyy")</td>
                        <td>@item.Ngayketthuc?.ToString("dd/MM/yyyy")</td>
                        <td>@item.User?.HoTen</td>
                        <td>
                            @if (isActive)
                            {
                                <span class="badge bg-success">Đang diễn ra</span>
                            }
                            else if (item.Ngayketthuc < DateTime.Now)
                            {
                                <span class="badge bg-secondary">Đã kết thúc</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Sắp diễn ra</span>
                            }
                        </td>
                        <td>
                            <a asp-action="QuanLySanPham" asp-route-id="@item.Madotgiamgia" class="btn btn-sm btn-primary" title="Quản lý SP"><i class="bi bi-box-seam"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Madotgiamgia" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Madotgiamgia" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
