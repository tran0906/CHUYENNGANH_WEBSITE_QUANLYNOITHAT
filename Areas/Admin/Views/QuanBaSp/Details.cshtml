@model QuanBaSp
@{ ViewData["Title"] = "Chi tiết đợt quảng bá"; }

<h2>Chi tiết đợt quảng bá</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><strong>Thông tin đợt quảng bá</strong></div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã đợt</dt>
                    <dd class="col-sm-8">@Model.Madotgiamgia</dd>
                    <dt class="col-sm-4">Ngày bắt đầu</dt>
                    <dd class="col-sm-8">@Model.Ngaybatdau?.ToString("dd/MM/yyyy")</dd>
                    <dt class="col-sm-4">Ngày kết thúc</dt>
                    <dd class="col-sm-8">@Model.Ngayketthuc?.ToString("dd/MM/yyyy")</dd>
                    <dt class="col-sm-4">Nhân viên</dt>
                    <dd class="col-sm-8">@Model.User?.HoTen</dd>
                    <dt class="col-sm-4">NV chọn</dt>
                    <dd class="col-sm-8">@Model.Manvchon</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><strong>Sản phẩm quảng bá (@Model.Masps.Count SP)</strong></div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var sp in Model.Masps)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @sp.Tensp
                            <span class="badge bg-primary">@sp.Giaban?.ToString("N0") đ</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Madotgiamgia" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>