@model QuanBaSp
@{ ViewData["Title"] = "Xóa đợt quảng bá"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa đợt quảng bá này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã đợt</dt>
            <dd class="col-sm-9">@Model.Madotgiamgia</dd>
            <dt class="col-sm-3">Ngày bắt đầu</dt>
            <dd class="col-sm-9">@Model.Ngaybatdau?.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-3">Ngày kết thúc</dt>
            <dd class="col-sm-9">@Model.Ngayketthuc?.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-3">Nhân viên</dt>
            <dd class="col-sm-9">@Model.User?.HoTen</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Madotgiamgia" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>