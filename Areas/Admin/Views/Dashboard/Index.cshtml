@{
    ViewData["Title"] = "Dashboard";
    var topSanPham = ViewBag.TopSanPhamBanChay as System.Data.DataTable;
    var donHangGanDay = ViewBag.DonHangGanDay as System.Data.DataTable;
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TongSanPham</h4>
                        <p class="mb-0">Sản phẩm</p>
                    </div>
                    <i class="bi bi-box-seam fs-1"></i>
                </div>
            </div>
            <a asp-controller="SanPham" asp-action="Index" class="card-footer text-white text-decoration-none">
                Xem chi tiết <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TongDonHang</h4>
                        <p class="mb-0">Đơn hàng</p>
                    </div>
                    <i class="bi bi-cart fs-1"></i>
                </div>
            </div>
            <a asp-controller="DonHang" asp-action="Index" class="card-footer text-white text-decoration-none">
                Xem chi tiết <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TongKhachHang</h4>
                        <p class="mb-0">Khách hàng</p>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
            <a asp-controller="KhachHang" asp-action="Index" class="card-footer text-white text-decoration-none">
                Xem chi tiết <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@(((decimal)ViewBag.TongDoanhThu).ToString("N0")) đ</h4>
                        <p class="mb-0">Tổng doanh thu</p>
                    </div>
                    <i class="bi bi-currency-dollar fs-1"></i>
                </div>
            </div>
            <a asp-controller="ThongKe" asp-action="DoanhThu" class="card-footer text-white text-decoration-none">
                Xem chi tiết <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Biểu đồ đơn hàng theo trạng thái -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <strong><i class="bi bi-pie-chart"></i> Đơn hàng theo trạng thái</strong>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <canvas id="chartDonHang" style="max-height: 220px;"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <strong><i class="bi bi-clock-history"></i> Tình trạng đơn hàng</strong>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="p-3 rounded" style="background: #fff3cd;">
                            <h3 class="mb-1 text-warning">@ViewBag.DonChoXuLy</h3>
                            <small class="text-muted">Chờ xử lý</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 rounded" style="background: #cff4fc;">
                            <h3 class="mb-1 text-info">@ViewBag.DonDangGiao</h3>
                            <small class="text-muted">Đang giao</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 rounded" style="background: #d1e7dd;">
                            <h3 class="mb-1 text-success">@ViewBag.DonHoanThanh</h3>
                            <small class="text-muted">Hoàn thành</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 rounded" style="background: #f8d7da;">
                            <h3 class="mb-1 text-danger">@ViewBag.DonDaHuy</h3>
                            <small class="text-muted">Đã hủy</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <strong><i class="bi bi-list-ul"></i> Đơn hàng gần đây</strong>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (donHangGanDay != null && donHangGanDay.Rows.Count > 0)
                        {
                            @foreach (System.Data.DataRow row in donHangGanDay.Rows)
                            {
                                var maDH = row["MADONHANG"]?.ToString() ?? "";
                                var tenKH = row["HOTENKH"]?.ToString() ?? "N/A";
                                var ngayDat = row["NGAYDAT"] != DBNull.Value ? Convert.ToDateTime(row["NGAYDAT"]).ToString("dd/MM/yyyy") : "";
                                var tongTien = row["TongTien"] != DBNull.Value ? Convert.ToDecimal(row["TongTien"]) : 0;
                                var trangThai = row["TRANGTHAI"]?.ToString() ?? "";
                                var badgeClass = (trangThai == "Hoàn thành" || trangThai == "Đã giao") ? "bg-success" 
                                               : (trangThai == "Đang xử lý" || trangThai == "Đang giao") ? "bg-warning" 
                                               : (trangThai == "Chờ xác nhận" || trangThai == "Chờ thanh toán") ? "bg-info" 
                                               : trangThai == "Đã hủy" ? "bg-danger" : "bg-secondary";
                                <tr>
                                    <td><a asp-controller="DonHang" asp-action="Details" asp-route-id="@maDH">@maDH</a></td>
                                    <td>@tenKH</td>
                                    <td>@ngayDat</td>
                                    <td class="text-end">@tongTien.ToString("N0") đ</td>
                                    <td><span class="badge @badgeClass">@trangThai</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Chưa có đơn hàng</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong><i class="bi bi-trophy"></i> Top sản phẩm bán chạy</strong>
                <small class="text-muted">(đơn hoàn thành)</small>
            </div>
            <div class="card-body p-0">
                @if (topSanPham != null && topSanPham.Rows.Count > 0)
                {
                    <ul class="list-group list-group-flush">
                        @{ var stt = 0; }
                        @foreach (System.Data.DataRow row in topSanPham.Rows)
                        {
                            stt++;
                            var tenSp = row["TENSP"]?.ToString() ?? "N/A";
                            var soLuong = row["TongSoLuong"] != DBNull.Value ? Convert.ToInt32(row["TongSoLuong"]) : 0;
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <span class="badge bg-primary me-2">@stt</span>
                                    @tenSp
                                </span>
                                <span class="badge bg-success">@soLuong đã bán</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-center py-3 text-muted">
                        <i class="bi bi-inbox fs-3"></i>
                        <p class="mb-0">Chưa có dữ liệu</p>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-controller="ThongKe" asp-action="SanPhamBanChay" class="btn btn-outline-primary btn-sm w-100">
                    Xem thêm
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ đơn hàng theo trạng thái
        var ctx = document.getElementById('chartDonHang').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Chờ xử lý', 'Đang giao', 'Hoàn thành', 'Đã hủy'],
                datasets: [{
                    data: [@ViewBag.DonChoXuLy, @ViewBag.DonDangGiao, @ViewBag.DonHoanThanh, @ViewBag.DonDaHuy],
                    backgroundColor: ['#ffc107', '#17a2b8', '#28a745', '#dc3545'],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { boxWidth: 12, padding: 8, font: { size: 11 } }
                    }
                }
            }
        });
    </script>
}
