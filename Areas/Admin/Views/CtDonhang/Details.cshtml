@model CtDonhang
@{ ViewData["Title"] = "Chi tiết"; }

<h2>Chi tiết sản phẩm trong đơn hàng</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Sản phẩm</dt>
            <dd class="col-sm-9">@Model.MaspNavigation?.Tensp (@Model.Masp)</dd>
            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Soluong</dd>
            <dt class="col-sm-3">Đơn giá</dt>
            <dd class="col-sm-9">@Model.Dongia?.ToString("N0") đ</dd>
            <dt class="col-sm-3">Thành tiền</dt>
            <dd class="col-sm-9"><strong>@Model.Thanhtien?.ToString("N0") đ</strong></dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-masp="@Model.Masp" asp-route-madonhang="@Model.Madonhang" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" asp-route-madonhang="@Model.Madonhang" class="btn btn-secondary">Quay lại</a>
</div>