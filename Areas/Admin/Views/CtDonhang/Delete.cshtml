@model CtDonhang
@{ ViewData["Title"] = "Xóa chi tiết đơn hàng"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa chi tiết này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã đơn hàng</dt>
            <dd class="col-sm-9">@Model.Madonhang</dd>
            <dt class="col-sm-3">Sản phẩm</dt>
            <dd class="col-sm-9">@Model.MaspNavigation?.Tensp</dd>
            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Soluong</dd>
            <dt class="col-sm-3">Thành tiền</dt>
            <dd class="col-sm-9">@Model.Thanhtien?.ToString("N0") đ</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Masp" />
    <input type="hidden" asp-for="Madonhang" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" asp-route-madonhang="@Model.Madonhang" class="btn btn-secondary">Hủy</a>
</form>