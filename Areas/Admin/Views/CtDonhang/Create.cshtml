@model CtDonhang
@{ ViewData["Title"] = "Thêm chi tiết đơn hàng"; }

<h2>Thêm chi tiết đơn hàng</h2>
<hr />
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Madonhang" class="form-label">Đơn hàng</label>
                <select asp-for="Madonhang" class="form-select" asp-items="ViewBag.Madonhang">
                    <option value="">-- Chọn đơn hàng --</option>
                </select>
                <span asp-validation-for="Madonhang" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Masp" class="form-label">Sản phẩm</label>
                <select asp-for="Masp" class="form-select" asp-items="ViewBag.Masp">
                    <option value="">-- Chọn sản phẩm --</option>
                </select>
                <span asp-validation-for="Masp" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Soluong" class="form-label">Số lượng</label>
                <input asp-for="Soluong" class="form-control" type="number" min="1" value="1" />
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }