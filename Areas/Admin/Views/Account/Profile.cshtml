@model User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-person-circle display-1 text-primary"></i>
                <h4 class="mt-3">@Model.HoTen</h4>
                <p class="text-muted">@Model.TenUser</p>
                <span class="badge @(Model.VaiTro == "Admin" ? "bg-danger" : "bg-primary") fs-6">@Model.VaiTro</span>
            </div>
            <div class="list-group list-group-flush">
                <div class="list-group-item">
                    <small class="text-muted">User ID</small>
                    <p class="mb-0">@Model.UserId</p>
                </div>
                <div class="list-group-item">
                    <small class="text-muted">Ngày tạo</small>
                    <p class="mb-0">@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Cập nhật thông tin</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> @ViewBag.Success
                    </div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
                    </div>
                }
                <form asp-action="Profile" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="VaiTro" />
                    <input type="hidden" asp-for="NgayTao" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UserId" class="form-label">User ID</label>
                            <input asp-for="UserId" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="VaiTro" class="form-label">Vai trò</label>
                            <input asp-for="VaiTro" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TenUser" class="form-label">Tên đăng nhập</label>
                        <input asp-for="TenUser" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label">Họ tên</label>
                        <input asp-for="HoTen" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
                        <input asp-for="MatKhau" type="password" class="form-control" value="" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>