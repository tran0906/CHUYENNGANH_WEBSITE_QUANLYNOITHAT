@{
    ViewData["Title"] = "Xóa sử dụng";
    var mucDich = ViewBag.MucDich as MucDichSuDung;
    var sanPham = ViewBag.SanPham as SanPham;
}

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa liên kết này?</h5>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mục đích</dt>
                    <dd class="col-sm-8">@mucDich?.Tenmdsd (@mucDich?.Mamdsd)</dd>
                    <dt class="col-sm-4">Sản phẩm</dt>
                    <dd class="col-sm-8">@sanPham?.Tensp (@sanPham?.Masp)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="mamdsd" value="@mucDich?.Mamdsd" />
    <input type="hidden" name="masp" value="@sanPham?.Masp" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" asp-route-mamdsd="@mucDich?.Mamdsd" class="btn btn-secondary">Hủy</a>
</form>