@model SanPham
@{ ViewData["Title"] = "Xóa sản phẩm"; }

<h2>Xác nhận xóa</h2>
<hr />
<div class="alert alert-danger">
    <h5>Bạn có chắc chắn muốn xóa sản phẩm này?</h5>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã sản phẩm</dt>
            <dd class="col-sm-9">@Model.Masp</dd>
            <dt class="col-sm-3">Tên sản phẩm</dt>
            <dd class="col-sm-9">@Model.Tensp</dd>
            <dt class="col-sm-3">Nhóm sản phẩm</dt>
            <dd class="col-sm-9">@Model.ManhomspNavigation?.Tennhomsp</dd>
            <dt class="col-sm-3">Giá bán</dt>
            <dd class="col-sm-9">@Model.Giaban?.ToString("N0") đ</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Masp" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>