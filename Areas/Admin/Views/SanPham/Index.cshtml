@model IEnumerable<SanPham>
@{ ViewData["Title"] = "Quản lý sản phẩm"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý sản phẩm</h2>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm mới</a>
    </div>
</div>

<!-- Form tìm kiếm và lọc -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm sản phẩm</label>
                <input type="text" name="search" class="form-control" placeholder="Nhập mã hoặc tên SP..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Nhóm sản phẩm</label>
                <select name="nhomSp" class="form-select" asp-items="ViewBag.NhomSanPhams">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Vật liệu</label>
                <select name="vatLieu" class="form-select" asp-items="ViewBag.VatLieus">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Lọc</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead>
                <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Nhóm SP</th>
                    <th>Vật liệu</th>
                    <th>Giá bán</th>
                    <th>Tồn kho</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Masp</td>
                        <td>@item.Tensp</td>
                        <td>@item.ManhomspNavigation?.Tennhomsp</td>
                        <td>@item.MavlNavigation?.Tenvl</td>
                        <td>@item.Giaban?.ToString("N0") đ</td>
                        <td>@item.Soluongton</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Masp" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Masp" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>