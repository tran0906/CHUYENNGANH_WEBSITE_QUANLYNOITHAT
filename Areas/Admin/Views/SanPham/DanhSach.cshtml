@model IEnumerable<SanPham>
@{ ViewData["Title"] = "Danh sách sản phẩm"; }

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-box-seam"></i> Danh sách sản phẩm</h2>
    <span class="badge bg-secondary">Chế độ xem</span>
</div>

<!-- Form tìm kiếm và lọc -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm sản phẩm</label>
                <input type="text" name="search" class="form-control" placeholder="Nhập mã hoặc tên SP..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Nhóm sản phẩm</label>
                <select name="nhomSp" class="form-select" asp-items="ViewBag.NhomSanPhams">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Vật liệu</label>
                <select name="vatLieu" class="form-select" asp-items="ViewBag.VatLieus">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Lọc</button>
                <a asp-action="DanhSach" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="bi bi-list-ul"></i> Danh sách sản phẩm (@Model.Count())
    </div>
    <div class="card-body">
        <div class="table-responsive-scroll">
        <table class="table table-striped table-hover table-paginated">
            <thead class="table-dark">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Nhóm SP</th>
                    <th>Vật liệu</th>
                    <th>Giá bán</th>
                    <th>Tồn kho</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Không có sản phẩm nào
                        </td>
                    </tr>
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Masp</strong></td>
                        <td>@item.Tensp</td>
                        <td>@item.ManhomspNavigation?.Tennhomsp</td>
                        <td>@item.MavlNavigation?.Tenvl</td>
                        <td>@item.Giaban?.ToString("N0") đ</td>
                        <td>
                            @if (item.Soluongton <= 0)
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                            else if (item.Soluongton <= 5)
                            {
                                <span class="badge bg-warning text-dark">@item.Soluongton</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@item.Soluongton</span>
                            }
                        </td>
                        <td>
                            <a asp-action="ChiTiet" asp-route-id="@item.Masp" class="btn btn-sm btn-info" title="Xem chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
