@model SanPham
@{ ViewData["Title"] = "Chi tiết sản phẩm"; }

<h2>Chi tiết sản phẩm</h2>
<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã sản phẩm</dt>
            <dd class="col-sm-9">@Model.Masp</dd>
            <dt class="col-sm-3">Tên sản phẩm</dt>
            <dd class="col-sm-9">@Model.Tensp</dd>
            <dt class="col-sm-3">Nhóm sản phẩm</dt>
            <dd class="col-sm-9">@Model.ManhomspNavigation?.Tennhomsp</dd>
            <dt class="col-sm-3">Vật liệu</dt>
            <dd class="col-sm-9">@Model.MavlNavigation?.Tenvl</dd>
            <dt class="col-sm-3">Giá bán</dt>
            <dd class="col-sm-9">@Model.Giaban?.ToString("N0") đ</dd>
            <dt class="col-sm-3">Số lượng tồn</dt>
            <dd class="col-sm-9">@Model.Soluongton</dd>
            <dt class="col-sm-3">Hình ảnh</dt>
            <dd class="col-sm-9">@Model.Hinhanh</dd>
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Mota</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Masp" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>