@model IEnumerable<DOANCHUYENNGANH_WEB_QLNOITHAT.Models.SanPham>
@{
    ViewData["Title"] = "Sản phẩm bán chạy";
}

@functions {
    string GetFirstImage(string? hinhanh)
    {
        if (string.IsNullOrEmpty(hinhanh)) return "/images/no-image.jpg";
        var images = hinhanh.Split(';', StringSplitOptions.RemoveEmptyEntries);
        
        foreach (var img in images)
        {
            var trimmed = img.Trim();
            if (string.IsNullOrEmpty(trimmed)) continue;
            
            if (trimmed.StartsWith("/") || trimmed.StartsWith("http"))
                return trimmed;
            
            if (!trimmed.Contains("/"))
                return "/images/products/" + trimmed;
            
            return "/" + trimmed;
        }
        return "/images/no-image.jpg";
    }

    string GetPageUrl(int page)
    {
        return $"/san-pham-ban-chay?page={page}";
    }
}

<!-- Breadcrumb -->
<section class="breadcrumb-section">
    <div class="container">
        <nav class="breadcrumb">
            <a href="/"><i class="fas fa-home"></i> Trang chủ</a>
            <i class="fas fa-chevron-right"></i>
            <span>Sản phẩm bán chạy</span>
        </nav>
    </div>
</section>

<div class="container">
    <div class="page-content">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Nhóm sản phẩm -->
            <div class="sidebar-widget">
                <h3 class="widget-title">Danh mục sản phẩm</h3>
                <ul class="category-list">
                    <li>
                        <a href="/san-pham">
                            <i class="fas fa-th-large"></i> Tất cả sản phẩm
                        </a>
                    </li>
                    <li>
                        <a href="/san-pham-ban-chay" class="active">
                            <i class="fas fa-fire"></i> Sản phẩm bán chạy
                        </a>
                    </li>
                    @if (ViewBag.NhomSpList != null)
                    {
                        var iconMap = new Dictionary<string, string> {
                            {"decor", "fa-paint-brush"}, {"trang trí", "fa-couch"}, {"phòng khách", "fa-couch"},
                            {"phòng ngủ", "fa-bed"}, {"bàn ghế", "fa-chair"}, {"kệ", "fa-th-large"},
                            {"đèn", "fa-lightbulb"}, {"gương", "fa-square"}, {"tranh", "fa-image"},
                            {"bình", "fa-vase"}, {"tượng", "fa-monument"}, {"đồng hồ", "fa-clock"},
                            {"quà tặng", "fa-gift"}, {"phong thủy", "fa-yin-yang"}
                        };
                        foreach (var nhom in ViewBag.NhomSpList)
                        {
                            var nhomName = ((string)nhom.Tennhomsp)?.ToLower() ?? "";
                            var icon = "fa-cube";
                            foreach (var kv in iconMap)
                            {
                                if (nhomName.Contains(kv.Key))
                                {
                                    icon = kv.Value;
                                    break;
                                }
                            }
                            <li>
                                <a href="/san-pham?nhomsp=@nhom.Manhomsp">
                                    <i class="fas @icon"></i> @nhom.Tennhomsp
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>

            <!-- Banner -->
            <div class="sidebar-widget" style="background: linear-gradient(135deg, #8B4513, #D2691E); color: white; padding: 20px; border-radius: 10px; text-align: center;">
                <i class="fas fa-fire" style="font-size: 40px; margin-bottom: 15px;"></i>
                <h4 style="margin-bottom: 10px;">Sản phẩm HOT</h4>
                <p style="font-size: 14px; opacity: 0.9;">Những sản phẩm được khách hàng yêu thích và mua nhiều nhất!</p>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <div style="margin-bottom: 20px; padding: 20px; background: linear-gradient(135deg, #dc3545, #fd7e14); color: white; border-radius: 10px;">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <i class="fas fa-fire" style="font-size: 40px;"></i>
                    <div>
                        <h2 style="margin: 0;">Sản phẩm bán chạy</h2>
                        <p style="margin: 5px 0 0; opacity: 0.9;">Top sản phẩm được khách hàng tin tưởng và lựa chọn nhiều nhất</p>
                    </div>
                </div>
            </div>

            <!-- Toolbar -->
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; padding: 15px; background: var(--gray-light); border-radius: 10px;">
                <div>
                    Hiển thị <strong>@Model.Count()</strong> / <strong>@ViewBag.TotalItems</strong> sản phẩm bán chạy
                </div>
            </div>

            <!-- Products Grid -->
            <div class="products-grid">
                @{ int rank = ((ViewBag.CurrentPage - 1) * 12) + 1; }
                @foreach (var product in Model)
                {
                    var isOutOfStock = product.Soluongton <= 0;
                    <div class="product-card @(isOutOfStock ? "out-of-stock" : "")" style="position: relative;">
                        <!-- Ranking Badge -->
                        @if (rank <= 3)
                        {
                            var badgeColor = rank == 1 ? "#FFD700" : (rank == 2 ? "#C0C0C0" : "#CD7F32");
                            var badgeIcon = rank == 1 ? "fa-crown" : "fa-medal";
                            <div style="position: absolute; top: 10px; left: 10px; z-index: 10; background: @badgeColor; color: #333; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                                <i class="fas @badgeIcon" style="font-size: 16px;"></i>
                            </div>
                        }
                        else if (rank <= 10)
                        {
                            <div style="position: absolute; top: 10px; left: 10px; z-index: 10; background: #dc3545; color: white; width: 30px; height: 30px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 12px;">
                                @rank
                            </div>
                        }
                        
                        <div class="product-image">
                            @* Chỉ hiển thị badge giảm giá nếu đang giảm giá *@
                            @if (product.DangGiamGia)
                            {
                                <span class="product-badge badge-sale">-@product.PhanTramGiam%</span>
                            }
                            @if (isOutOfStock)
                            {
                                <span class="stock-badge out">Hết hàng</span>
                            }
                            <img src="@GetFirstImage(product.Hinhanh)" alt="@product.Tensp" @(isOutOfStock ? "style=opacity:0.6;" : "") />
                            <div class="product-actions">
                                <a href="/san-pham/@product.Masp" title="Xem chi tiết"><i class="fas fa-eye"></i></a>
                                @if (!isOutOfStock)
                                {
                                    <a href="#" onclick="addToCart('@product.Masp'); return false;" title="Thêm vào giỏ"><i class="fas fa-shopping-cart"></i></a>
                                }
                                <a href="#" title="Yêu thích"><i class="fas fa-heart"></i></a>
                            </div>
                        </div>
                        <div class="product-info">
                            <div class="product-category">@(product.ManhomspNavigation?.Tennhomsp ?? "Nội thất")</div>
                            <h3 class="product-name"><a href="/san-pham/@product.Masp">@product.Tensp</a></h3>
                            <div class="product-price">
                                @if (product.DangGiamGia)
                                {
                                    <span class="old-price">@(product.GiaGoc?.ToString("N0") ?? "0") ₫</span>
                                }
                                <span class="current-price">@(product.Giaban?.ToString("N0") ?? "0") ₫</span>
                            </div>
                        </div>
                    </div>
                    rank++;
                }
            </div>

            @if (!Model.Any())
            {
                <div style="text-align: center; padding: 50px;">
                    <i class="fas fa-box-open" style="font-size: 60px; color: #ddd; margin-bottom: 20px;"></i>
                    <h3>Chưa có sản phẩm bán chạy</h3>
                    <p style="color: #666;">Hãy quay lại sau để xem các sản phẩm được yêu thích nhất</p>
                    <a href="/san-pham" class="btn btn-primary" style="margin-top: 15px;">Xem tất cả sản phẩm</a>
                </div>
            }

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@GetPageUrl(ViewBag.CurrentPage - 1)"><i class="fas fa-chevron-left"></i></a>
                    }
                    
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        if (i == ViewBag.CurrentPage)
                        {
                            <span class="active">@i</span>
                        }
                        else
                        {
                            <a href="@GetPageUrl(i)">@i</a>
                        }
                    }
                    
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@GetPageUrl(ViewBag.CurrentPage + 1)"><i class="fas fa-chevron-right"></i></a>
                    }
                </nav>
            }
        </div>
    </div>
</div>
