@{
    ViewData["Title"] = "Liên hệ";
}

<!-- Breadcrumb -->
<section class="breadcrumb-section">
    <div class="container">
        <nav class="breadcrumb">
            <a href="/"><i class="fas fa-home"></i> Trang chủ</a>
            <i class="fas fa-chevron-right"></i>
            <span>Liên hệ</span>
        </nav>
    </div>
</section>

<!-- Contact Hero -->
<section style="background: linear-gradient(rgba(139, 69, 19, 0.9), rgba(139, 69, 19, 0.9)), url('/images/contact-banner.jpg') center/cover; padding: 60px 0; color: white; text-align: center;">
    <div class="container">
        <h1 style="font-size: 42px; margin-bottom: 15px;">Liên hệ với chúng tôi</h1>
        <p style="font-size: 18px; opacity: 0.9;">Chúng tôi luôn sẵn sàng hỗ trợ bạn</p>
    </div>
</section>

<!-- Contact Content -->
<div class="container">
    <div class="contact-section">
        <!-- Contact Info -->
        <div>
            <h2 style="color: var(--primary-color); margin-bottom: 30px;">Thông tin liên hệ</h2>
            
            <div class="contact-info-card">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                    <h4>Showroom Hà Nội</h4>
                    <p style="color: var(--text-light);">Số 21 ngõ 120 Nguyễn Xiển, Q.Thanh Xuân, Hà Nội</p>
                </div>
            </div>
            
            <div class="contact-info-card">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                    <h4>Showroom TP.HCM</h4>
                    <p style="color: var(--text-light);">Số 268/12 Nguyễn Thái Bình, Q.Tân Bình, TP.HCM</p>
                </div>
            </div>
            
            <div class="contact-info-card">
                <i class="fas fa-phone-alt"></i>
                <div>
                    <h4>Hotline</h4>
                    <p style="color: var(--text-light);">0969.534.568 - 0389.343.838</p>
                </div>
            </div>
            
            <div class="contact-info-card">
                <i class="fas fa-envelope"></i>
                <div>
                    <h4>Email</h4>
                    <p style="color: var(--text-light);">contact@noithatviet.vn</p>
                </div>
            </div>
            
            <div class="contact-info-card">
                <i class="fas fa-clock"></i>
                <div>
                    <h4>Giờ làm việc</h4>
                    <p style="color: var(--text-light);">8:00 - 21:00 (Thứ 2 - Chủ nhật)</p>
                </div>
            </div>

            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.9664!2d105.8!3d20.98!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjDCsDU4JzQ4LjAiTiAxMDXCsDQ4JzAwLjAiRQ!5e0!3m2!1svi!2s!4v1234567890" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>

        <!-- Contact Form -->
        <div>
            <h2 style="color: var(--primary-color); margin-bottom: 30px;">Gửi tin nhắn cho chúng tôi</h2>
            
            <form action="/lien-he" method="post" style="background: var(--gray-light); padding: 30px; border-radius: 15px;">
                <div class="form-group">
                    <label>Họ và tên <span style="color: red;">*</span></label>
                    <input type="text" class="form-control" name="name" required placeholder="Nhập họ và tên" />
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label>Email <span style="color: red;">*</span></label>
                        <input type="email" class="form-control" name="email" required placeholder="Nhập email" />
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại <span style="color: red;">*</span></label>
                        <input type="tel" class="form-control" name="phone" required placeholder="Nhập số điện thoại" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Chủ đề</label>
                    <select class="form-control" name="subject">
                        <option value="">-- Chọn chủ đề --</option>
                        <option value="tuvan">Tư vấn sản phẩm</option>
                        <option value="donhang">Hỏi về đơn hàng</option>
                        <option value="baohanh">Bảo hành - Đổi trả</option>
                        <option value="hoptac">Hợp tác kinh doanh</option>
                        <option value="khac">Khác</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Nội dung tin nhắn <span style="color: red;">*</span></label>
                    <textarea class="form-control" name="message" rows="5" required placeholder="Nhập nội dung tin nhắn..."></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    <i class="fas fa-paper-plane"></i> Gửi tin nhắn
                </button>
            </form>
        </div>
    </div>
</div>

<!-- FAQ Section -->
<section class="section" style="background: var(--gray-light);">
    <div class="container">
        <div class="section-title">
            <h2>Câu hỏi thường gặp</h2>
        </div>
        <div style="max-width: 800px; margin: 0 auto;">
            <div style="background: white; border-radius: 10px; margin-bottom: 15px; overflow: hidden;">
                <div style="padding: 20px; cursor: pointer; display: flex; justify-content: space-between; align-items: center;" onclick="toggleFaq(this)">
                    <strong>Làm thế nào để đặt hàng?</strong>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div style="padding: 0 20px 20px; display: none;">
                    <p style="color: var(--text-light);">Bạn có thể đặt hàng trực tiếp trên website bằng cách thêm sản phẩm vào giỏ hàng và tiến hành thanh toán. Hoặc liên hệ hotline 0969.534.568 để được hỗ trợ.</p>
                </div>
            </div>
            <div style="background: white; border-radius: 10px; margin-bottom: 15px; overflow: hidden;">
                <div style="padding: 20px; cursor: pointer; display: flex; justify-content: space-between; align-items: center;" onclick="toggleFaq(this)">
                    <strong>Thời gian giao hàng là bao lâu?</strong>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div style="padding: 0 20px 20px; display: none;">
                    <p style="color: var(--text-light);">Thời gian giao hàng từ 2-5 ngày tùy khu vực. Nội thành Hà Nội và TP.HCM giao trong 1-2 ngày.</p>
                </div>
            </div>
            <div style="background: white; border-radius: 10px; margin-bottom: 15px; overflow: hidden;">
                <div style="padding: 20px; cursor: pointer; display: flex; justify-content: space-between; align-items: center;" onclick="toggleFaq(this)">
                    <strong>Chính sách đổi trả như thế nào?</strong>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div style="padding: 0 20px 20px; display: none;">
                    <p style="color: var(--text-light);">Chúng tôi hỗ trợ đổi trả trong vòng 30 ngày nếu sản phẩm còn nguyên tem, chưa qua sử dụng và có hóa đơn mua hàng.</p>
                </div>
            </div>
            <div style="background: white; border-radius: 10px; overflow: hidden;">
                <div style="padding: 20px; cursor: pointer; display: flex; justify-content: space-between; align-items: center;" onclick="toggleFaq(this)">
                    <strong>Có hỗ trợ thanh toán trả góp không?</strong>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div style="padding: 0 20px 20px; display: none;">
                    <p style="color: var(--text-light);">Có, chúng tôi hỗ trợ thanh toán trả góp 0% lãi suất qua thẻ tín dụng cho đơn hàng từ 3 triệu đồng.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script>
    function toggleFaq(el) {
        var content = el.nextElementSibling;
        var icon = el.querySelector('i');
        if (content.style.display === 'none') {
            content.style.display = 'block';
            icon.classList.remove('fa-chevron-down');
            icon.classList.add('fa-chevron-up');
        } else {
            content.style.display = 'none';
            icon.classList.remove('fa-chevron-up');
            icon.classList.add('fa-chevron-down');
        }
    }
</script>
}
