@{
    ViewData["Title"] = "Giới thiệu";
}

<!-- Breadcrumb -->
<section class="breadcrumb-section">
    <div class="container">
        <nav class="breadcrumb">
            <a href="/"><i class="fas fa-home"></i> Trang chủ</a>
            <i class="fas fa-chevron-right"></i>
            <span>Giới thiệu</span>
        </nav>
    </div>
</section>

<!-- About Hero -->
<section style="background: linear-gradient(rgba(139, 69, 19, 0.9), rgba(139, 69, 19, 0.9)), url('/images/about-banner.jpg') center/cover; padding: 80px 0; color: white; text-align: center;">
    <div class="container">
        <h1 style="font-size: 42px; margin-bottom: 20px;">Về Nội Thất Việt</h1>
        <p style="font-size: 18px; max-width: 700px; margin: 0 auto; opacity: 0.9;">
            Chuyên cung cấp các sản phẩm trang trí nội thất cao cấp, mang đến vẻ đẹp tinh tế cho mọi không gian sống
        </p>
    </div>
</section>

<!-- About Content -->
<section class="section">
    <div class="container">
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center;">
            <div>
                <img src="/images/about-1.jpg" alt="Về chúng tôi" style="border-radius: 15px; box-shadow: 0 10px 40px rgba(0,0,0,0.15);" />
            </div>
            <div>
                <h2 style="color: var(--primary-color); margin-bottom: 20px;">Câu chuyện của chúng tôi</h2>
                <p style="color: var(--text-light); margin-bottom: 15px; line-height: 1.8;">
                    Nội Thất Việt được thành lập với sứ mệnh mang đến những sản phẩm trang trí nội thất cao cấp, 
                    giúp khách hàng tạo nên không gian sống đẹp và tiện nghi.
                </p>
                <p style="color: var(--text-light); margin-bottom: 15px; line-height: 1.8;">
                    Với hơn 10 năm kinh nghiệm trong ngành, chúng tôi tự hào là đơn vị tiên phong trong việc 
                    cung cấp các sản phẩm decor, đồ trang trí phong cách hiện đại và quà tặng sang trọng.
                </p>
                <p style="color: var(--text-light); line-height: 1.8;">
                    Đội ngũ nhân viên chuyên nghiệp, tận tâm luôn sẵn sàng tư vấn và hỗ trợ khách hàng 
                    lựa chọn những sản phẩm phù hợp nhất với nhu cầu và phong cách của từng gia đình.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Vision & Mission -->
<section class="section" style="background: var(--gray-light);">
    <div class="container">
        <div class="section-title">
            <h2>Tầm nhìn & Sứ mệnh</h2>
        </div>
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 30px;">
            <div style="background: white; padding: 40px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                <div style="width: 70px; height: 70px; background: var(--primary-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                    <i class="fas fa-eye" style="font-size: 30px; color: white;"></i>
                </div>
                <h3 style="color: var(--primary-color); margin-bottom: 15px;">Tầm nhìn</h3>
                <p style="color: var(--text-light); line-height: 1.8;">
                    Trở thành thương hiệu hàng đầu Việt Nam trong lĩnh vực cung cấp sản phẩm trang trí nội thất, 
                    được khách hàng tin tưởng và yêu mến.
                </p>
            </div>
            <div style="background: white; padding: 40px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                <div style="width: 70px; height: 70px; background: var(--secondary-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                    <i class="fas fa-bullseye" style="font-size: 30px; color: white;"></i>
                </div>
                <h3 style="color: var(--primary-color); margin-bottom: 15px;">Sứ mệnh</h3>
                <p style="color: var(--text-light); line-height: 1.8;">
                    Mang đến cho khách hàng những sản phẩm chất lượng cao với giá cả hợp lý, 
                    cùng dịch vụ chăm sóc khách hàng tận tâm và chuyên nghiệp.
                </p>
            </div>
        </div>
    </div>
</section>

