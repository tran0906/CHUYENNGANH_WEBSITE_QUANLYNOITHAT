@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nội Thất Việt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #8B4513;
            --primary-dark: #5D2E0C;
            --secondary-color: #D2691E;
            --accent-color: #DEB887;
            --wood-light: #F5DEB3;
            --wood-medium: #D2B48C;
            --wood-dark: #8B7355;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--wood-light) 0%, var(--wood-medium) 50%, var(--accent-color) 100%);
            padding: 20px 0;
        }
        .login-container { position: relative; z-index: 1; width: 100%; max-width: 450px; padding: 20px; }
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(139, 69, 19, 0.3);
            overflow: hidden;
        }
        .login-header {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            padding: 30px 25px;
            text-align: center;
            position: relative;
        }
        .login-header::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-top: 15px solid var(--primary-color);
        }
        .login-icon {
            width: 70px; height: 70px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            margin: 0 auto 12px;
            border: 3px solid rgba(255, 255, 255, 0.3);
        }
        .login-icon i { font-size: 32px; color: #fff; }
        .login-header h4 { color: #fff; font-size: 22px; font-weight: 600; margin-bottom: 5px; }
        .login-header p { color: rgba(255, 255, 255, 0.8); font-size: 13px; margin: 0; }
        .logo-text { font-size: 16px; font-weight: 700; color: #fff; margin-top: 8px; }
        .logo-text span { color: var(--wood-light); }
        .login-body { padding: 40px 30px 30px; }
        .alert { border-radius: 10px; padding: 12px 15px; margin-bottom: 20px; font-size: 14px; }
        .alert-danger { background: #FFF5F5; border: 1px solid #FED7D7; color: #C53030; }
        .alert-success { background: #F0FFF4; border: 1px solid #C6F6D5; color: #276749; }
        .alert-info { background: #FFF8E7; border: 1px solid var(--accent-color); color: var(--primary-dark); }
        .alert i { margin-right: 8px; }
        .description { color: var(--wood-dark); text-align: center; margin-bottom: 20px; font-size: 14px; }
        .form-group { margin-bottom: 20px; }
        .form-label { display: block; color: var(--primary-dark); font-weight: 500; margin-bottom: 8px; font-size: 14px; }
        .form-label .text-danger { color: #C53030; }
        .input-wrapper { position: relative; }
        .input-wrapper i { position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: var(--primary-color); font-size: 18px; }
        .form-control {
            width: 100%; padding: 12px 15px 12px 45px;
            border: 2px solid var(--wood-medium); border-radius: 10px;
            font-size: 15px; background: #FEFEFE; color: var(--primary-dark);
            transition: all 0.3s ease;
        }
        .form-control:focus { outline: none; border-color: var(--primary-color); box-shadow: 0 0 0 4px rgba(139, 69, 19, 0.1); background: #fff; }
        .form-control::placeholder { color: var(--wood-dark); }
        .btn-submit {
            width: 100%; padding: 14px;
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            border: none; border-radius: 10px; color: #fff;
            font-size: 15px; font-weight: 600; cursor: pointer;
            display: flex; align-items: center; justify-content: center; gap: 10px;
            text-transform: uppercase; letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        .btn-submit:hover { background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); transform: translateY(-2px); box-shadow: 0 8px 25px rgba(139, 69, 19, 0.4); }
        .btn-submit i { font-size: 16px; }
        .divider { height: 1px; background: var(--wood-medium); margin: 20px 0; }
        .back-link { display: inline-flex; align-items: center; gap: 5px; color: var(--primary-color); text-decoration: none; font-size: 14px; transition: all 0.3s ease; }
        .back-link:hover { color: var(--primary-dark); gap: 8px; }
        .login-footer { background: var(--wood-light); padding: 15px; text-align: center; border-top: 1px solid var(--wood-medium); }
        .login-footer p { color: var(--wood-dark); font-size: 12px; margin: 0; }
        .otp-code { font-size: 28px; font-weight: 700; color: var(--primary-color); letter-spacing: 5px; }
        .step-indicator { display: flex; justify-content: center; gap: 10px; margin-bottom: 25px; }
        .step { width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 14px; background: var(--wood-medium); color: #fff; }
        .step.active { background: var(--primary-color); }
        .step.completed { background: #28A745; }
        .step-line { width: 40px; height: 2px; background: var(--wood-medium); align-self: center; }
        .step-line.active { background: var(--primary-color); }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon"><i class="bi bi-key-fill"></i></div>
                <h4>Quên Mật Khẩu</h4>
                <p>Khôi phục mật khẩu tài khoản</p>
                <div class="logo-text">NỘI THẤT <span>VIỆT</span></div>
            </div>
            <div class="login-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger"><i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error</div>
                }
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success"><i class="bi bi-check-circle-fill"></i> @ViewBag.Success</div>
                }

                @if (ViewBag.Step == 3)
                {
                    <div class="step-indicator">
                        <div class="step completed"><i class="bi bi-check"></i></div>
                        <div class="step-line active"></div>
                        <div class="step completed"><i class="bi bi-check"></i></div>
                        <div class="step-line active"></div>
                        <div class="step active">3</div>
                    </div>
                    <p class="description">Nhập mật khẩu mới cho tài khoản của bạn</p>
                    <form action="/Account/ResetPassword" method="post">
                        <div class="form-group">
                            <label class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                            <div class="input-wrapper">
                                <i class="bi bi-lock-fill"></i>
                                <input type="password" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới (ít nhất 6 ký tự)" required minlength="6" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <div class="input-wrapper">
                                <i class="bi bi-lock-fill"></i>
                                <input type="password" name="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" required minlength="6" />
                            </div>
                        </div>
                        <button type="submit" class="btn-submit"><i class="bi bi-check-circle-fill"></i> Đổi mật khẩu</button>
                    </form>
                }
                else if (ViewBag.Step == 2)
                {
                    <div class="step-indicator">
                        <div class="step completed"><i class="bi bi-check"></i></div>
                        <div class="step-line active"></div>
                        <div class="step active">2</div>
                        <div class="step-line"></div>
                        <div class="step">3</div>
                    </div>
                    <div class="alert alert-info text-center">
                        <p style="margin-bottom: 8px;"><strong>Mã OTP của bạn là:</strong></p>
                        <span class="otp-code">@ViewBag.OTPCode</span>
                        <br /><small style="color: var(--wood-dark);">(Demo - Trong thực tế mã sẽ được gửi qua SMS)</small>
                    </div>
                    <p class="description">Nhập mã OTP đã gửi đến số <strong>@ViewBag.Phone</strong></p>
                    <form action="/Account/VerifyOTPInPage" method="post">
                        <div class="form-group">
                            <label class="form-label">Mã OTP <span class="text-danger">*</span></label>
                            <div class="input-wrapper">
                                <i class="bi bi-shield-lock-fill"></i>
                                <input type="text" name="otp" class="form-control" placeholder="Nhập mã OTP 6 số" required maxlength="6" pattern="[0-9]{6}" style="letter-spacing: 5px; text-align: center; font-weight: 600;" />
                            </div>
                        </div>
                        <button type="submit" class="btn-submit"><i class="bi bi-arrow-right"></i> Xác nhận OTP</button>
                    </form>
                    <div class="divider"></div>
                    <div class="text-center">
                        <a href="/Account/ForgotPassword" class="back-link"><i class="bi bi-arrow-counterclockwise"></i> Gửi lại mã OTP</a>
                    </div>
                }
                else
                {
                    <div class="step-indicator">
                        <div class="step active">1</div>
                        <div class="step-line"></div>
                        <div class="step">2</div>
                        <div class="step-line"></div>
                        <div class="step">3</div>
                    </div>
                    <p class="description">Nhập số điện thoại đã đăng ký để nhận mã OTP</p>
                    <form action="/Account/SendOTP" method="post">
                        <div class="form-group">
                            <label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                            <div class="input-wrapper">
                                <i class="bi bi-phone-fill"></i>
                                <input type="text" name="sdtkh" class="form-control" placeholder="Nhập số điện thoại (VD: 0901234567)" required pattern="[0-9]{10,11}" title="Số điện thoại phải có 10-11 chữ số" />
                            </div>
                        </div>
                        <button type="submit" class="btn-submit"><i class="bi bi-send-fill"></i> Gửi mã OTP</button>
                    </form>
                }
                <div class="divider"></div>
                <div class="text-center">
                    <a href="/Account/Login" class="back-link"><i class="bi bi-arrow-left"></i> Quay lại đăng nhập</a>
                </div>
            </div>
            <div class="login-footer">
                <p>&copy; @DateTime.Now.Year Nội Thất Việt. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</body>
</html>
