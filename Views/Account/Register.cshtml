@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nội Thất Việt</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-page">
        <div class="auth-box" style="max-width: 500px;">
            <div class="auth-header">
                <a href="/" class="logo-text">NỘI THẤT <span>VIỆT</span></a>
                <h2>Đăng ký tài khoản</h2>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form action="/Account/Register" method="post" id="registerForm" autocomplete="off">
                <div class="form-group">
                    <label><i class="fas fa-user"></i> Họ và tên <span style="color: red;">*</span></label>
                    <input type="text" class="form-control" name="hoTen" id="hoTen" required placeholder="Nhập họ và tên" autocomplete="off" minlength="2" maxlength="100" />
                </div>

                <div class="form-group">
                    <label><i class="fas fa-phone"></i> Số điện thoại <span style="color: red;">*</span></label>
                    <input type="tel" class="form-control" name="soDienThoai" id="soDienThoai" required placeholder="VD: 0901234567" autocomplete="off" maxlength="10" />
                    <small class="text-muted">10 số, bắt đầu bằng 03, 05, 07, 08, 09. Dùng để đăng nhập</small>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-map-marker-alt"></i> Địa chỉ <span style="color: red;">*</span></label>
                    <textarea class="form-control" name="diaChi" id="diaChi" required placeholder="Nhập địa chỉ giao hàng" rows="2" autocomplete="off" minlength="10" maxlength="500"></textarea>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-lock"></i> Mật khẩu <span style="color: red;">*</span></label>
                    <div style="position: relative;">
                        <input type="password" class="form-control" name="matKhau" id="password" required placeholder="Nhập mật khẩu" minlength="6" maxlength="100" autocomplete="new-password" />
                        <button type="button" onclick="togglePassword('password', 'toggleIcon1')" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: #666;">
                            <i class="fas fa-eye" id="toggleIcon1"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-lock"></i> Xác nhận mật khẩu <span style="color: red;">*</span></label>
                    <div style="position: relative;">
                        <input type="password" class="form-control" name="xacNhanMatKhau" id="confirmPassword" required placeholder="Nhập lại mật khẩu" autocomplete="new-password" />
                        <button type="button" onclick="togglePassword('confirmPassword', 'toggleIcon2')" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: #666;">
                            <i class="fas fa-eye" id="toggleIcon2"></i>
                        </button>
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: flex; align-items: flex-start; gap: 10px; cursor: pointer;">
                        <input type="checkbox" name="agree" required style="margin-top: 3px;" />
                        <span style="font-size: 14px; color: #666;">
                            Tôi đồng ý với <a href="/dieu-khoan" style="color: var(--primary-color);">Điều khoản sử dụng</a> 
                            và <a href="/chinh-sach-bao-mat" style="color: var(--primary-color);">Chính sách bảo mật</a>
                        </span>
                    </label>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%; padding: 15px;">
                    <i class="fas fa-user-plus"></i> Đăng ký
                </button>
            </form>

            <div class="auth-footer">
                Đã có tài khoản? <a href="/Account/Login">Đăng nhập ngay</a>
            </div>
        </div>
    </div>

    <script src="/js/validation.js"></script>
    <script>
        function togglePassword(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Validation realtime
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registerForm');
            
            // Validate họ tên
            const hoTen = document.getElementById('hoTen');
            hoTen.addEventListener('blur', function() {
                const result = Validator.isValidName(this.value);
                if (!result.valid) {
                    Validator.showError(this, result.message);
                } else {
                    Validator.showSuccess(this);
                }
            });
            
            // Validate số điện thoại
            const sdt = document.getElementById('soDienThoai');
            sdt.addEventListener('blur', function() {
                const result = Validator.isValidPhone(this.value);
                if (!result.valid) {
                    Validator.showError(this, result.message);
                } else {
                    Validator.showSuccess(this);
                }
            });
            // Chỉ cho nhập số
            sdt.addEventListener('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
            
            // Validate địa chỉ
            const diaChi = document.getElementById('diaChi');
            diaChi.addEventListener('blur', function() {
                const result = Validator.isValidAddress(this.value);
                if (!result.valid) {
                    Validator.showError(this, result.message);
                } else {
                    Validator.showSuccess(this);
                }
            });
            
            // Validate mật khẩu
            const password = document.getElementById('password');
            password.addEventListener('blur', function() {
                const result = Validator.isValidPassword(this.value);
                if (!result.valid) {
                    Validator.showError(this, result.message);
                } else {
                    Validator.showSuccess(this);
                }
            });
            
            // Validate xác nhận mật khẩu
            const confirmPassword = document.getElementById('confirmPassword');
            confirmPassword.addEventListener('blur', function() {
                const result = Validator.isPasswordMatch(password.value, this.value);
                if (!result.valid) {
                    Validator.showError(this, result.message);
                } else {
                    Validator.showSuccess(this);
                }
            });
            
            // Submit form
            form.addEventListener('submit', function(e) {
                let isValid = true;
                
                // Validate tất cả
                const hoTenResult = Validator.isValidName(hoTen.value);
                if (!hoTenResult.valid) { Validator.showError(hoTen, hoTenResult.message); isValid = false; }
                
                const sdtResult = Validator.isValidPhone(sdt.value);
                if (!sdtResult.valid) { Validator.showError(sdt, sdtResult.message); isValid = false; }
                
                const diaChiResult = Validator.isValidAddress(diaChi.value);
                if (!diaChiResult.valid) { Validator.showError(diaChi, diaChiResult.message); isValid = false; }
                
                const pwResult = Validator.isValidPassword(password.value);
                if (!pwResult.valid) { Validator.showError(password, pwResult.message); isValid = false; }
                
                const confirmResult = Validator.isPasswordMatch(password.value, confirmPassword.value);
                if (!confirmResult.valid) { Validator.showError(confirmPassword, confirmResult.message); isValid = false; }
                
                if (!isValid) {
                    e.preventDefault();
                    // Scroll đến lỗi đầu tiên
                    const firstError = form.querySelector('.is-invalid');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstError.focus();
                    }
                }
            });
        });
    </script>
</body>
</html>
